    <!-- Título ARMARIO -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="ARMARIO"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:textColor="@color/material_dynamic_tertiary60"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <HorizontalScrollView
        android:id="@+id/categoriesScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/categoriesContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/allButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textColor="#000000"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="10dp"
                android:padding="8dp"/>

            <Button
                android:id="@+id/abajoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inferior"
                android:textColor="#AF57C1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="10dp"
                android:padding="8dp"/>

            <Button
                android:id="@+id/arribaButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Superior"
                android:textColor="#AF57C1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="10dp"
                android:padding="8dp"/>

            <Button
                android:id="@+id/zapatosButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calzado"
                android:textColor="#AF57C1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"/>
        </LinearLayout>
    </HorizontalScrollView>

